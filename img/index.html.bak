<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Galer√≠a Shadow_Xyz</title>
  <style>
    body {
      background: #0d0d0d;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      text-align: center;
      padding: 20px;
    }
    h1 {
      color: #00eaff;
      text-shadow: 0 0 10px #00eaff;
    }
    .galeria {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      gap: 15px;
      margin-top: 20px;
    }
    .galeria a {
      text-decoration: none;
    }
    .galeria img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 12px;
      box-shadow: 0 0 10px #00eaff80;
      transition: transform 0.3s ease;
    }
    .galeria img:hover {
      transform: scale(1.05);
      box-shadow: 0 0 15px #00eaff;
    }
  </style>
</head>
<body>
  <h1>üñºÔ∏è Shadow_Xyz - Galer√≠a</h1>
  <div class="galeria" id="galeria"></div>

  <script>
    // Genera im√°genes con nombres tipo shadow1.jpg, shadow2.jpg...
    const galeria = document.getElementById('galeria');

    for (let i = 1; i <= 50; i++) { // busca hasta 50 im√°genes
      const img = document.createElement('img');
      img.src = `shadow${i}.jpg`;
      img.alt = `shadow${i}`;
      img.onerror = () => img.remove(); // si no existe, se elimina
      const a = document.createElement('a');
      a.href = img.src;
      a.target = '_blank';
      a.appendChild(img);
      galeria.appendChild(a);
    }
  </script>
</body>
</html>
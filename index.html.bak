  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Poppins', sans-serif;
    }

    body {
      background: radial-gradient(circle at center, #000000, #020202, #050a10);
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      height: 100vh;
      text-align: center;
      overflow: hidden;
      position: relative;
    }

    body::before {
      content: "";
      position: absolute;
      width: 200%;
      height: 200%;
      background: radial-gradient(circle, rgba(0,212,255,0.15) 1px, transparent 1px);
      background-size: 50px 50px;
      animation: moveParticles 20s linear infinite;
      z-index: 0;
      opacity: 0.4;
    }

    @keyframes moveParticles {
      from { transform: translate(0, 0) rotate(0deg); }
      to { transform: translate(-50px, -50px) rotate(360deg); }
    }

    /* 🌌 Imagen de fondo a pantalla completa */
    .bg-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url("https://files.catbox.moe/vf7ply.jpg") no-repeat center/cover;
      opacity: 0.12;
      z-index: 1;
      animation: moveBg 25s ease-in-out infinite alternate;
      filter: blur(3px);
    }

    @keyframes moveBg {
      0% { transform: scale(1) translateY(0); }
      50% { transform: scale(1.05) translateY(-10px); }
      100% { transform: scale(1) translateY(0); }
    }

    h1 {
      font-size: 2.2rem;
      margin-bottom: 25px;
      color: #00d4ff;
      text-shadow: 0 0 15px #00d4ff;
      animation: glow 2s infinite alternate;
      z-index: 2;
    }

    @keyframes glow {
      from { text-shadow: 0 0 10px #00d4ff; }
      to { text-shadow: 0 0 25px #00d4ff, 0 0 50px #00d4ff; }
    }

    .profile {
      position: relative;
      z-index: 2;
      margin-bottom: 10px;
    }

    .profile img {
      width: 130px;
      height: 130px;
      border-radius: 15px;
      object-fit: cover;
      box-shadow: 0 0 25px rgba(0,212,255,0.5);
      border: 2px solid rgba(0,212,255,0.4);
      transition: all 0.3s ease;
    }

    .profile img:hover {
      transform: scale(1.05);
      box-shadow: 0 0 35px rgba(0,212,255,0.8);
    }

    .profile-name {
      font-size: 1.2rem;
      margin-top: 8px;
      color: #00d4ff;
      text-shadow: 0 0 10px #00d4ff;
    }

    .buttons {
      display: flex;
      flex-direction: column;
      gap: 15px;
      width: 90%;
      max-width: 400px;
      z-index: 2;
    }

    .btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.2);
      color: #fff;
      font-size: 1rem;
      padding: 15px 20px;
      border-radius: 50px;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 0 10px rgba(0,212,255,0.1);
      backdrop-filter: blur(6px);
    }

    .btn i {
      font-size: 1.3rem;
    }

    .btn:hover {
      transform: scale(1.05);
      border-color: #00d4ff;
      box-shadow: 0 0 20px rgba(0,212,255,0.4);
    }

    .github { background: #181717; }
    .whatsapp { background: #128C7E; }
    .channel { background: #00aaff; }
    .channel2 { background: #005580; }
    .imgr { background: #b30000; }

    /* 💚 Botón especial Rin Itoshi */
    .btn.rin {
      background: linear-gradient(45deg, #00ff99, #00cc66);
      border-color: rgba(0,255,150,0.4);
      box-shadow: 0 0 15px rgba(0,255,150,0.2);
      color: #fff;
    }

    .btn.rin:hover {
      box-shadow: 0 0 30px rgba(0,255,150,0.6);
      transform: scale(1.07);
    }

    .social-list {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 25px;
      z-index: 2;
    }

    .social-list a {
      color: #00d4ff;
      font-size: 1.6rem;
      transition: transform 0.3s, color 0.3s;
    }

    .social-list a:hover {
      transform: scale(1.2);
      color: #ffffff;
      text-shadow: 0 0 10px #00d4ff;
    }

    footer {
      position: fixed;
      bottom: 10px;
      font-size: 0.9rem;
      color: #666;
      z-index: 2;
    }
  </style>
